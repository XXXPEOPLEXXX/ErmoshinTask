<Page x:Class="TaskManager.PagesProget.AddPages.AddTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.PagesProget.AddPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddTaskPage">

    <Grid>
        <StackPanel Width="500">
            <TextBlock Text="id" FontSize="20" />
            <TextBox x:Name="TBId"/>
            <TextBlock Text="Описание" FontSize="20"/>
            <TextBox x:Name="TBDescription"/>
            <TextBlock Text="Важность" FontSize="20"/>
            <ComboBox x:Name="TBImportance"/>
            <TextBlock Text="Срок до конца выполнения задачи"/>
            <TextBox x:Name="TBDeadLine" />
            <TextBlock Text="Выполненение задач" FontSize="20"/>
            <ComboBox x:Name="TBCompleted"/>
            <TextBlock Text="К какому пользователю привязан аккаунт" FontSize="20"/>
            <TextBox x:Name="TBIdUser"  />
            <Button x:Name="BtnSaveTasks" Content="Добавить" Click="BtnSaveTasks_Click"/>
        </StackPanel>
    </Grid>
</Page>
