
    <Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*" />
            <ColumnDefinition Width="281*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="91*" />
            <RowDefinition Height="270*" />
            <RowDefinition Height="73*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1">
            <TextBlock Text="Задачи" FontSize="20" />
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Column="1" Grid.Row="1" />
        <StackPanel Grid.Row="1">
            <Button x:Name="BtnTasck" Content="Задачи" Click="BtnTasck_Click"/>
            <Button x:Name="BtnAuth" Content="Авторизация" Click="BtnAuth_Click"/>
            <Button x:Name="BtnBack" Content="Назад" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
